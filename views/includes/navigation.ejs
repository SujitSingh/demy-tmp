<header class="main-header">
  <nav class="main-header-nav">
    <ul class="main-header-list">
      <li>
        <a href="/" class="<%= path === '/' ? 'active' : '' %>">Shop</a>
      </li>
      <li>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Products</a>
      </li>
      <% if (isAuthenticated) { %>
        <li>
          <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a>
        </li>
        <li>
          <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>">Orders</a>
        </li>
        <li>
          <a href="/admin/add-product" class="<%= path === '/admin/add-product' ? 'active' : '' %>">Add product</a>
        </li>
        <li>
          <a href="/admin/products" class="<%= path === '/admin/products' ? 'active' : '' %>">Admin Products</a>
        </li>
      <% } %>
    </ul>
    <ul class="main-header-list auth-links">
      <% if (!isAuthenticated) { %>
        <li>
          <a href="/login" class="<%= path === '/login' ? 'active' : '' %>">Login</a>
        </li>
        <li>
          <a href="/signup" class="<%= path === '/signup' ? 'active' : '' %>">Sign up</a>
        </li>
      <% } else { %>
        <li>
          <form action="/logout" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>
</header>