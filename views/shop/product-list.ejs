<%- include('../includes/page-start.ejs') %>
  <link rel="stylesheet" href="/css/product.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="products">
    <% if(prods.length > 0) { %>
      <% for(let prod of prods) { %>
        <article class="card product-item">
          <header class="card-header">
            <h4 class="product-title"><%= prod.title %></h4>
          </header>
          <div class="card-banner">
            <img class="product-image" src="https://previews.123rf.com/images/theohrm/theohrm1502/theohrm150200003/36518119-a-simple-cartoon-style-drawing-of-a-stack-of-books-this-file-is-vector-.jpg" alt="{{this.title}}" />
          </div>
          <div class="card-content">
            <h5 class="product-price">$20.0</h5>
            <p class="product-description">Some dummy description of my product</p>
          </div>
          <div class="card-footer">
            <button class="btn-action">Add to cart</button>
          </div>
        </article>
      <% } %>
    <% } else { %>
      <h2>No products found</h2>
    <% } %>
  </main>

<%- include('../includes/page-end.ejs') %>
